<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services
        http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <defaults public="false" />

        <service id="emsf.form.factory" class="EMS\FormBundle\Form\FormFactory">
            <argument type="service" id="emsf.form_config.factory"/>
            <argument type="service" id="form.factory"/>
        </service>
        <service id="emsf.form_config.factory" class="EMS\FormBundle\FormConfig\FormConfigFactory">
            <argument type="service" id="emsch.manager.client_request"/>
        </service>

        <service id="emsf.client" class="EMS\FormBundle\Service\FormClient">
            <argument type="service" id="EMS\ClientHelperBundle\Helper\Elasticsearch\ClientRequest"/>
            <argument type="service" id="form.factory"/>
            <argument type="service" id="logger"/>
            <argument type="string">%emsf.instance.type%</argument>
            <argument type="string">%emsf.instance.form-field%</argument>
            <argument type="string">%emsf.instance.theme-field%</argument>
        </service>

        <!-- controllers -->
        <service id="emsf.controller.form" class="EMS\FormBundle\Controller\FormController"  public="true">
            <argument type="service" id="emsf.client"/>
            <argument type="service" id="emsf.form.factory"/>
            <argument type="service" id="emss.client"/>
            <argument type="service" id="twig" />
        </service>
    </services>
</container>