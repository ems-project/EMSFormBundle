{
	"name" : "elasticms/form-bundle",
	"description" : "Generate forms based on elasticms configurations",
	"type" : "symfony-bundle",
	"keywords" : [
		"elasticms"
	],
	"license" : "MIT",
	"authors" : [
		{
			"name" : "David Meert",
			"email" : "david.meert@smals.be"
		}
	],
	"require" : {
		"php" : "^7.2",
		"ext-json": "*",
		"elasticms/client-helper-bundle" : "^3.3",
		"symfony/form": "^4.4",
		"symfony/framework-bundle": "^4.4",
		"symfony/http-foundation": "^4.4",
		"symfony/options-resolver": "^4.4",
		"symfony/routing": "^4.4",
		"symfony/security": "^4.4",
		"symfony/twig-bridge": "^4.4",
		"symfony/validator": "^4.4",
		"twig/twig" : "~2.10.0"
	},
	"require-dev" : {
		"mockery/mockery" : "^0.9",
		"phpmd/phpmd": "^2.7",
		"phpstan/phpstan": "^0.11",
		"phpunit/phpunit" : "^5.7",
		"symfony/phpunit-bridge": "^4.4",
		"squizlabs/php_codesniffer": "^3.4"
	},
	"autoload" : {
		"psr-4" : {
			"EMS\\FormBundle\\" : ""
		},
		"exclude-from-classmap" : [
			"tests/"
		]
	},
	"autoload-dev" : {
		"psr-4" : {
			"EMS\\FormBundle\\Tests\\" : "tests/"
		}
	},
	"scripts": {
		"phpcs": "phpcs --standard=phpcs.xml.dist --extensions=php,lib,inc",
		"phpcbf": "phpcbf --standard=phpcs.xml.dist --extensions=php,lib,inc",
		"phpstan": "phpstan analyse .",
		"phpmd": "./vendor/bin/phpmd . html ./phpmd.xml.dist --suffixes php --exclude vendor --ignore-violations-on-exit --reportfile phpmd.html",
		"phpmd-win": "vendor\\bin\\phpmd %cd% html phpmd.xml.dist --suffixes php --exclude %cd%\\vendor --ignore-violations-on-exit --reportfile phpmd.html",
		"phpunit": "phpunit"
	}
}
