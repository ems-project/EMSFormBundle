{
	"name" : "elasticms/form-bundle",
	"description" : "Generate forms based on elasticms configurations",
	"type" : "symfony-bundle",
	"keywords" : [
		"elasticms"
	],
	"license" : "MIT",
	"authors" : [
		{
			"name" : "EMS Community",
			"homepage" : "https://github.com/ems-project/EMSFormBundle/contributors"
		}
	],
	"minimum-stability": "dev",
	"require" : {
		"php": "^7.4",
		"ext-json": "*",
		"elasticms/client-helper-bundle": "5.0.x-dev",
		"giggsey/libphonenumber-for-php": "^8.12",
		"ramsey/uuid-doctrine": "^1.6",
		"symfony/form": "^4.4",
		"symfony/framework-bundle": "^4.4",
		"symfony/http-client": "^4.4",
		"symfony/http-foundation": "^4.4",
		"symfony/intl": "^4.4",
		"symfony/options-resolver": "^4.4",
		"symfony/routing": "^4.4",
		"symfony/security": "^4.4",
		"symfony/twig-bridge": "^4.4",
		"symfony/validator": "^4.4",
		"twig/twig": "^2.14"
	},
	"require-dev" : {
		"friendsofphp/php-cs-fixer" : "^3.0",
		"phpstan/phpstan": "^0.12",
		"symfony/test-pack": "^1.0",
		"symfony/yaml": "^4.4|^5.0"
	},
	"autoload" : {
		"psr-4" : {
			"EMS\\FormBundle\\" : "src/"
		}
	},
	"autoload-dev" : {
		"psr-4" : {
			"EMS\\FormBundle\\Tests\\" : "tests/"
		}
	},
	"config": {
		"lock": false,
		"sort-packages": true
	},
	"scripts": {
		"phpcs": "php-cs-fixer fix",
		"phpstan": "phpstan analyse --memory-limit 1G",
		"phpunit": "phpunit",
		"phpall": "php-cs-fixer fix && phpunit && phpstan analyse --memory-limit 1G"
	}
}
